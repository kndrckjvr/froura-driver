<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBB71E"
    tools:context="com.froura.develo4.driver.registration.LoginActivity">

    <Button
        android:id="@+id/mobLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/sign_up_with"
        android:background="@drawable/background_border_sharp"
        android:textColor="#000000"
        android:fontFamily="@font/fjalla_one_regular"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
        android:paddingLeft="24dp"
        android:text="MOBILE NUMBER"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        facebook:srcCompat="@drawable/icon_hex" />

    <LinearLayout
        android:id="@+id/sign_up_with"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_below="@+id/textView8"
        android:orientation="horizontal">

        <View
            android:layout_width="92dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_height="2dp"
            android:clickable="false"
            android:background="#000000"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fjalla_one_regular"
            android:text="SIGN UP WITH"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp" />


        <View
            android:layout_width="92dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_height="2dp"
            android:clickable="false"
            android:background="#000000"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fjalla_one_regular"
        android:text="FROURÁ"
        android:textColor="#000"
        android:textSize="50sp" />

</RelativeLayout>
